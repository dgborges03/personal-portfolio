---
const { project } = Astro.props;
---
<a href={`/projects/${project.id}`} class="group relative rounded-2xl border bg-white hover:shadow-md transition overflow-hidden block">
  {project.image && (
    <img src={project.image} alt={project.title} class="h-44 w-full object-cover" loading="lazy" />
  )}
  <div class="p-4">
    <h3 class="text-lg font-semibold group-hover:underline underline-offset-4">{project.title}</h3>
    <p class="mt-1 text-sm text-zinc-600 line-clamp-2">{project.summary}</p>
    {project.tags && project.tags.length > 0 && (
      <ul class="mt-3 flex flex-wrap gap-2">
        {project.tags.slice(0, 4).map((t) => (
          <li class="rounded-full border px-2 py-0.5 text-xs text-zinc-600">{t}</li>
        ))}
      </ul>
    )}
  </div>
</a>

