---
import Layout from "../layouts/Layout.astro";
import { projects } from "../data/projects.js";
import ProjectCard from "../components/ProjectCard.astro";
import { passions } from "../data/passions.js";
import PassionCard from "../components/PassionCard.astro";
---
<Layout>
  <!-- Hero -->
  <section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-6">
      <div>
        <h1 class="text-3xl sm:text-5xl font-semibold tracking-tight">
          Hi, I'm Donavan Borges!
        </h1>
        <p class="mt-4 max-w-2xl text-zinc-600">CS (w/ focus in Robotics) @ Caltech</p>
      </div>

      <div class="flex gap-3">
        <!-- LinkedIn -->
        <a
          href="https://linkedin.com/in/donavan-borges-57a2aa245"
          target="_blank"
          rel="noreferrer"
          class="inline-flex items-center gap-2 rounded-xl border px-4 py-2 text-zinc-700 hover:bg-zinc-50"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="h-5 w-5"
            aria-hidden="true"
          >
            <path
              d="M4.98 3.5C4.98 4.88 3.86 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1 4.98 2.12 4.98 3.5zM0 8h5v16H0V8zm7.5 0h4.7v2.3h.1c.7-1.3 2.5-2.7 5.2-2.7 5.5 0 6.5 3.6 6.5 8.2V24h-5V16c0-1.9 0-4.3-2.7-4.3-2.7 0-3.1 2.1-3.1 4.1V24h-5V8z"
            />
          </svg>
          <span>LinkedIn</span>
        </a>
  
        <!-- GitHub -->
        <a
          href="https://github.com/dgborges03"
          target="_blank"
          rel="noreferrer"
          class="inline-flex items-center gap-2 rounded-xl bg-zinc-900 px-4 py-2 text-white hover:bg-zinc-800"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="h-5 w-5"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12 2C6.48 2 2 6.58 2 12.26c0 4.52 2.87 8.35 6.84 9.7.5.1.68-.22.68-.5v-1.9c-2.78.62-3.37-1.37-3.37-1.37-.46-1.2-1.13-1.52-1.13-1.52-.92-.65.07-.64.07-.64 1.02.07 1.56 1.07 1.56 1.07.9 1.58 2.36 1.12 2.93.86.09-.67.35-1.12.63-1.38-2.22-.26-4.56-1.14-4.56-5.07 0-1.12.39-2.04 1.03-2.76-.1-.26-.45-1.3.1-2.7 0 0 .84-.27 2.75 1.05a9.2 9.2 0 0 1 5 0c1.9-1.32 2.74-1.05 2.74-1.05.55 1.4.2 2.44.11 2.7.64.72 1.03 1.64 1.03 2.76 0 3.94-2.34 4.8-4.57 5.05.36.31.68.93.68 1.88v2.79c0 .27.18.6.69.5A10.03 10.03 0 0 0 22 12.26C22 6.58 17.52 2 12 2z"
              clip-rule="evenodd"
            />
          </svg>
          <span>GitHub</span>
        </a>
      </div>
    </div>
  </section>
  
  

  <!-- Projects Grid -->
  <section id="projects" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-16">
    <h2 class="text-2xl sm:text-3xl font-semibold tracking-tight">Projects / Responsibilites</h2>
    <p class="mt-2 text-zinc-600 max-w-2xl padding-below:100px pb-5">
      Take a look of things that I am particularly proud of below!
    </p>
    <div class="flex flex-col gap-8">
      {projects.map((p, i) => <ProjectCard project={p} flip={i % 2 === 1} />)}
    </div>
  </section>

  <!-- Passion Projects Grid -->
  <section id="passion-projects" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-20">
    <h2 class="text-2xl sm:text-3xl font-semibold tracking-tight">Passions of Mine</h2>
    <p class="mt-2 text-zinc-600 max-w-2xl">
      From working out to creating a custom controller for Tekken, here are some of my passions
      that keep me busy.
    </p>

    <div class="mt-8 grid grid-cols-1 gap-6">
      {passions.map((item) => <PassionCard item={item} />)}
    </div>
  </section>
</Layout>

